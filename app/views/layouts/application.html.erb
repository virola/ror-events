<!DOCTYPE html>
<html>
<head>
  <title>小小的日历</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link href="https://cdn.bootcss.com/bootstrap/4.1.0/css/bootstrap.min.css" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  
</head>

<body>
<%= debug @debug_info %>

<header class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to '首页', root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-content" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <ul class="navbar-nav mr-auto" id="navbar-content">
  <% if session[:current_member_id] %>
    <li class="nav-item">
      <%= link_to "Members", members_path, class: "nav-link" + (current_page?('/members') ? ' active': '') %>
    </li>
    <li class="nav-item">
      <%= link_to "Events", member_events_path(session[:current_member_id]), class: 'nav-link' + (current_page?("/members/#{session[:current_member_id]}/events") ? ' active': '') %>
    </li>
    <li class="nav-item"><%= link_to "#{Member.find(session[:current_member_id]).username}, 退出", session_path(session[:current_member_id]), method: 'delete', class: 'nav-link' %></li>
  <% else %>
    <li class="nav-item"><%= link_to '登录', new_session_path, class: 'nav-link' %></li>
    <li class="nav-item"><%= link_to '注册', new_member_path, class: 'nav-link' %></li>
  <% end -%>
  </ul>
</header>

<div class="container-fluid flash">
  <% if notice %>
  <div class="alert alert-info" role="alert"><%= notice %></div>
  <% end %>
  <% if alert %>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
  <% end %>
</div>
<div class="container">
  <div class="row">
    <main class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5">
    <%= yield %>
    </main>
  </div>
</div>
</body>
</html>
