<h1><%= t('change password') %></h1>

<%= bootstrap_form_for(@member, local: true, url: profile_password_update_path) do |form| %>
  <%= form.error_messages %>

  <%= form.password_field :password, class: 'form-control', :autofocus => true %>
  <%= form.password_field :new_password, class: 'form-control' %>
  <%= form.password_field :new_password_confirmation, class: 'form-control' %>

  <div class="actions">
    <%= form.submit '确定提交', class: 'btn btn-primary' %>
    <%= link_to '返回', profile_path, :class => 'btn' %>
  </div>
<% end %>


