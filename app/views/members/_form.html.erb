<%= form_with(model: member, local: true) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username, '用户名' %>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :password, '密码' %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, '密码确认' %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= form.label :bio, '简介' %>
    <%= form.text_area :bio %>
  </div>

  <div class="field">
    <%= form.label :open_id, '微信open_id' %>
    <%= form.text_field :open_id %>
  </div>

  <div class="field">
    <%= form.label :union_id, '微信union_id' %>
    <%= form.text_field :union_id %>
  </div>

  <div class="field">
    <%= form.label :birthday, '生日' %>
    <%= form.date_select :birthday, :start_year => 1920 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
