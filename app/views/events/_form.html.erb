<%= bootstrap_form_for(event, local: true, url: url) do |form| %>
  <%= form.error_messages %>
  <%= form.text_field :name, :class => 'form-control', :required => true, :autofocus => true %>
  <%= form.text_area :description, :class => 'form-control' %>

  <div class="form-group form-check">
    <%= form.check_box :is_public, :class => 'form-check-input' %>
    <%= form.label :is_public, :class => 'form-check-label' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, :class => 'form-control' %>
  </div>

  <%= form.hidden_field :member_id %>

  <div class="actions">
    <%= form.submit '提交', :class => 'btn btn-primary' %>
  </div>
<% end %>
